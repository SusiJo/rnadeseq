    model = '/sfs/9/ws/qeajl01-QBCOS_smrna/data/smrnaseq/deseq_input_1_batch_contrasts_all/linear_model_timepoint.txt'
    contrast_list = '/sfs/9/ws/qeajl01-QBCOS_smrna/data/smrnaseq/deseq_input_1_batch_contrasts_all/contrast_list_timepoint.tsv'
    logFC_threshold = 1
    adj_pval_threshold = 0.05
    //report_options = '/sfs/9/ws/qeajl01-QBCOS_smrna/data/smrnaseq/report_options.yml'
    project_summary = '/sfs/9/ws/qeajl01-QBCOS_smrna/data/QBCOS_20230612105025_summary.tsv'
