params {
    config_profile_name = 'Test smrnaseq'
    config_profile_description = 'Minimal test dataset to check pipeline function'
    // Limit resources so that this can run on Travis
    max_cpus = 2
    max_memory = 6.GB
    max_time = 48.h
    // Input data
    input = '/sfs/9/ws/qeajl01-QBCOS_smrna/data/smrnaseq/deseq_input_1_batch_contrasts_all/QBCOS_sample_preparations_smrnaseq_edit.tsv'
